{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],

    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true, // 有些情况下配合使用

    /* Base Options */
    "target": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    /* Path Aliases */
    "baseUrl": "./",
    "paths": {
      "@common/*": ["src/common/*"],
      "@node/*": ["src/node/*"],
      "@web/*": ["src/web/*"]
    },

    /* Project References Requirement */
    "composite": true,
    "declaration": true,
    "declarationMap": true
  }
}
